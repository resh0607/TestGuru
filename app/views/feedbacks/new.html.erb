<%= form_with model: @feedback, local: true do |form| %>
  <%= render 'shared/errors', resource: @feedback %>

  <div class="field">
    <%= form.label :email %><br />
    <% if user_signed_in? %>
      <%= form.email_field :email, autofocus: true, value:current_user.email %>
    <% else %>
      <%= form.email_field :email, autofocus: true, rows: 7, cols: 70, placeholder: "Enter your email" %>
    <% end %>
  </div></br>
 
  <div class="field">
    <%= form.text_area :message, autofocus: true, rows: 7, cols: 70, placeholder: "Enter text here" %>
  </div>

  <p><%= form.submit %></p>
<% end %>