
<div class="row justify-content-center mt-3">
  <div class="col col-md-4">
    <div class="card border-secondary">
      <div class="card-body">
        <%= form_with model: [:admin, @badge], html: { multipart: true }, local: true do |form| %>
          <div class="form-group">
            <%= render 'shared/errors', resource: @badge %>

            <p>
              <%= form.label :name %>
              <%= form.text_field :name, class: 'form-control' %>
            </p>

            <p>
              <%= form.label :rule_name %>
              <%= form.select :rule_name, BadgeService::BADGE_GIVING_RULES, class: 'form-control' %>
            </p>

            <p>
              <%= form.file_field :image %>
            </p>           

            <p><%= form.submit class: 'btn btn-outline-secondary btn-sm' %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>